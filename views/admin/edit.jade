extends layout
block content
	form(action='/admin/edit', method='post', enctype='multipart/form-data').page-edit
		.wrap
			input(type='hidden', name='post[id]', value='')
			
			p
				textarea#post_title.text.expand(name='post[title]', placeholder='Title Here', tabindex='1')
			p
				textarea#post_content.content.expand(name='post[content]', placeholder='Write post here', tabindex='2')
		
		// .wrap 
		.buttons
			a.button(href='/admin') Dashboard
			a.open-external.button(href='#external-url') Option
			.double
				input.RadioClass(type='radio', name='post[sts]', value='0')
				a.button(href='#')
					span.tick ✔
					| Idea
				input.RadioClass(type='radio', name='post[sts]', value='1')
				a.button(href='#')
					span.tick ✔
					| Public
			a.button.remove(href='index.php?page=edit&amp;action=del&amp;id=') Remove
			.overlay
				#external-url
					label External Url
					p
						input(type='text', placeholder='http://your-url.com', name='post[external_url]', style='border: 1px solid black; padding: 4px; width: 300px', value='')
					input.button.close-fancy(type='button', value='OK')
			// .overlay 
			input.button(type='submit', value='Save')
		// .buttons 
